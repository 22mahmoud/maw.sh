{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "typeRoots": ["./node_modules/@types"],
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/resources/*"]
    }
  },
  "include": ["src/**/*.ts", "bin/**/*.ts", "global.d.ts", "vite.config.ts"],
  "exclude": ["node_modules", "static", "staticfiles"]
}
