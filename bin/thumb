#!/bin/sh -e

dir="$1"
images="$dir/*.jpg"
thumbs="$dir/thumbs"

for i in $images
do
  image_name=$(basename "$i")

  # only convert the image if the thumbs not exist
  if [ ! -f "$thumbs/${image_name}" ] 
  then
    convert -define jpeg:size=500x500 "$i"  -thumbnail 500x500^ \
    -gravity center -extent 500x500  "$thumbs/${image_name}"
  fi
done

